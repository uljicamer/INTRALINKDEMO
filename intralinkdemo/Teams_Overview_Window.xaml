<Window x:Class="intralinkdemo.Teams_Overview_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:intralinkdemo"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Title="Teams_Overview_Window" Height="450" Width="800">
    <Grid>
        <Border CornerRadius="10" BorderThickness="1" BorderBrush="Black"/>
        <Image HorizontalAlignment="Left" Height="183" Margin="10,10,0,0" VerticalAlignment="Top" Width="201" Source="/Images/intrlink_logo_blue.png"/>
        <DataGrid x:Name="data_grid_view" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="87,106,87,106"/>
        <Button Content="Refresh list" HorizontalAlignment="Center" Margin="0,371,0,0" VerticalAlignment="Top" Background="#FF0300B5" FontFamily="Roboto Black" Click="Button_Click_1" BorderBrush="{x:Null}"/>
        <Button Content="X" HorizontalAlignment="Left" Margin="749,10,0,0" VerticalAlignment="Top" FontFamily="Roboto Black" Background="White" BorderBrush="{x:Null}" Foreground="#FF0300B5" Click="Button_Click"/>

    </Grid>
</Window>
